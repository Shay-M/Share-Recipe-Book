<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddNewRecipeFragment">

    <EditText
        android:id="@+id/add_recipe_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:hint="Recipe Title"
        android:hintTextColor="#757575"
        android:inputType="text"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Ingredients"
        android:hintTextColor="#757575"
        android:inputType="text"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/add_recipe_title"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/add_recipe_preparation"
        android:layout_width="406dp"
        android:layout_height="162dp"
        android:layout_marginTop="32dp"
        android:hint="Preparation"
        android:hintTextColor="#757575"
        android:inputType="textMultiLine"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/add_recipe_ingredients"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


